 <path style="fill:#ffffff;opacity:0.1" d="M 10.5,15 C 9.115,15 8,16.115 8,17.5 V 18.5 C 8,17.115 9.115,16 10.5,16 H 53.5 C 54.885,16 56,17.115 56,18.5 V 17.5 C 56,16.115 54.885,15 53.5,15 Z"/>
</svg>
{{/if}}</button>
<label for="hash_input" class="{{if this.enteredHashData.hashData ' active'}}">Enter Hash of Evidence as HEX max 64 characters</label>
	</div>
	<div class="middle">to</div>
	<div class="together">
		<button class="btn verify" disabled={{if this.hasValidHash '' 'disabled'}} type="button" {{action this.verifyExistingEvidence}}><span><Ux::InlineLoader @active={{this.isVerifying}}/>VERIFY EXISTING EVIDENCE</span></button>
		<div class="splitter-text">OR</div>
		<button class="btn mint" disabled={{if this.hasValidHash '' 'disabled'}} type="button" {{action this.mintNewEvidence}}><span><Ux::InlineLoader @active={{this.isMinting}}/>MINT NEW EVIDENCE</span></button>
	</div>
	

</div>
<div class="results-showcase{{if this.hasResults ' has-results'}}">
  <span class="clear-results" {{on 'click' (fn this.clearResults)}}>clear</span>
	<div class="results">
		<h3>Verify Results</h3>
		{{#each this.verifiedResults as |result|}}
    {{log result}}
		<div class="result {{if result.success 'ok' 'nok'}}">{{#if result.isUpload}}{{result.fileName}}{{else}}HASH: {{nicer-hash result.hashData}} {{/if}} {{#if result.success}} - {{result.time}} TX: <a href="https://yitc.ddns.net:4000/tx/{{result.txhash}}" target="_blank">URL</a> {{else}} returned error: {{result.error}}{{/if}} </div>
		{{/each}}
	</div>

	
	<div class="results">
		<h3>Mint Results</h3>
		{{#each this.mintedResults as |result|}}
		<div class="result {{if result.success 'ok' 'nok'}}">HASH: {{nicer-hash result.hashData}}   {{#if result.success}} - {{result.time}} TX: <a href="https://yitc.ddns.net:4000/tx/{{result.txhash}}" target="_blank">URL</a> {{else}} returned error: {{result.error}}{{/if}}</div>
		{{/each}}
	</div>
</div>